<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  {{{open_graph_tags}}}

  <link rel="icon" type="image/x-icon" href="/favicon.ico" />

  {{{styles}}}

  <title>{{title}}</title>
  <script defer type="module">
    import flamethrower from '/flamethrower.js'; flamethrower({
      prefetch:
        'visible', log: true
    });
  </script>
</head>

<body class="flex flex-col">

  <nav class="bg-gray-800">
    <div class="mx-auto max-w-5xl px-2 sm:px-6 lg:px-8">
      <div class="relative flex h-16 items-center justify-between">
        <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
          <div class="flex flex-shrink-0 items-center text-white text-bold">
            {{title}}
          </div>
          <div class="hidden sm:ml-6 sm:block">
            <div class="flex space-x-4">
              {{#each links}}
              <a href="{{this.url}}"
                class="text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium">{{this.label}}</a>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <main class="container max-w-4xl mx-auto">
    <div class="prose max-w-4xl">
      {{{content}}}
    </div>

    <footer class="py-12">
      <small>
        Built with
        <a href="https://rustyink.cli.rs" target="_blank" rel="noopener noreferrer">Rusty!nk</a>
        â€¢
        <a target="_blank" rel="noopener noreferrer" href="https://github.com/arjunkomath/rustyink">
          Source code
        </a>
      </small>
    </footer>
  </main>
</body>

{{{scripts}}}

<script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/prism.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>

</html>