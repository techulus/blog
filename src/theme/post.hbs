<article>
  <header>
    <h3>{{data.title}}</h3>

    {{#if data.author}}
    <p>
      {{#if data.author_link}}
      <small>// Written by <a href="{{data.author_link}}">{{data.author}}</a></small>
      {{else}}
      <small>// Written by {{data.author}}</small>
      {{/if}}
    </p>
    {{/if}}

    {{#if data.date_published}}
    <p><small>// {{format-date data.date_published "%a, %b %e %Y"}}</small></p>
    {{/if}}

    {{#if data.cover}}
    <div class="post-cover" style="background-image: url({{data.cover}});" alt="{{data.title}}" />
    {{/if}}
  </header>

  {{{body}}}

  <footer>
    {{#if data.author}}
    <p>
      {{#if data.author_link}}
      <small>// Find me on Twitter/X <a href="{{data.author_link}}">@arjunz</a></small>
      {{/if}}
    </p>
    {{/if}}
  </footer>
</article>