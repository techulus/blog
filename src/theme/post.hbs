<h2>{{title}}</h2>

{{#if author}}
<p>
  {{#if author_link}}
  <small>// Written by <a href="{{author_link}}">{{author}}</a></small>
  {{else}}
  <small>// Written by {{author}}</small>
  {{/if}}
</p>
{{/if}}

{{#if datePublished}}
<p><small>// {{datePublished}}</small></p>
{{/if}}

{{{body}}}

{{#if footnote}}
<footer><small>
    {{footnote}}
  </small></footer>
{{/if}}